<?xml version="1.0" encoding="utf-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <error-page>
        <error-code>403</error-code>
        <location>/erreur.jsp?message=Cette page ne vous est pas accessible</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/erreur.jsp?message=Page inexistante</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/erreur.jsp?message=BDD ou Beans inaccessibles</location>
    </error-page>

    <display-name>Lille Web Market</display-name>
    <description>
    	LilleWebMarket est une application de Bourse d'information
    </description>
    <context-param>
      <param-name>driver</param-name>
      <param-value>org.postgresql.Driver</param-value>
    </context-param>
    
    <context-param>
      <param-name>url</param-name>
      <param-value>jdbc:postgresql://localhost/maxime</param-value>
    </context-param>
    
    <context-param>
      <param-name>user</param-name>
      <param-value>maxime</param-value>
    </context-param>
    
    <context-param>
      <param-name>mdp</param-name>
      <param-value>moi</param-value>
    </context-param>
    <filter>
      <filter-name>Set Character Encoding</filter-name>
      <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
      <init-param>
      	<param-name>encoding</param-name>
      	<param-value>UTF-8</param-value>
      </init-param>
      <init-param>
      	<param-name>ignore</param-name>
      	<param-value>false</param-value>
      </init-param>
    </filter>
    <filter-mapping>
      <filter-name>Set Character Encoding</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>

    <jsp-config>
      <jsp-property-group>
      	<description>Config. de l'encodage des pages JSP</description>
      	<url-pattern>*.jsp</url-pattern>
	       <page-encoding>UTF-8</page-encoding>
      </jsp-property-group>
    </jsp-config>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Market</web-resource-name>
      <url-pattern>/users/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>administrateur</role-name>
      <role-name>utilisateur</role-name>
      <role-name>marketmaker</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admin</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <!-- <role-name>Administrateur</role-name> -->
      <role-name>administrateur</role-name>
     <!--  <role-name>MarketMaker</role-name> -->
    </auth-constraint>
  </security-constraint>
 <security-constraint>
    <web-resource-collection>
      <web-resource-name>MarketMaker</web-resource-name>
      <url-pattern>/marketmaker/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>administrateur</role-name>
      <role-name>marketmaker</role-name>
     <!--  <role-name>marketmaker</role-name> -->
    </auth-constraint>
  </security-constraint>
<!-- La maniere dont la page de login est affichee -->
 <!--  <login-config> -->
   <!-- Type d'authentification -->
   <!-- <auth-method>BASIC</auth-method>
    <realm-name>Espace Membres</realm-name>
  </login-config>-->
    <login-config>
      <auth-method>FORM</auth-method>
      <form-login-config>
        <form-login-page>/login.jsp</form-login-page>
        <form-error-page>/erreur.jsp?message=Mauvaise%20combinaison</form-error-page>
      </form-login-config>
    </login-config>
  <!-- La liste des differents roles -->
  <security-role>
    <role-name>administrateur</role-name>
  </security-role>
  <security-role>
    <role-name>utilisateur</role-name>
  </security-role>
  <security-role>
    <role-name>marketmaker</role-name>
  </security-role> 

  <Valve
    className="org.apache.catalina.valves.AccessLogValve"
    prefix="lillewebmarket_access."
    suffix=".txt"
    pattern="common"
  />
</web-app> 
